{
	"name": "@voltage/utils",
	"version": "1.0.0",
	"type": "module",
	"private": true,
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"require": "./dist/index.cjs",
			"import": "./dist/index.js"
		},
		"./storage": {
			"types": "./dist/storage.d.ts",
			"require": "./dist/storage.cjs",
			"import": "./dist/storage.js"
		},
		"./database": {
			"types": "./dist/database.d.ts",
			"require": "./dist/database.cjs",
			"import": "./dist/database.js"
		},
		"./logger": {
			"types": "./dist/logger.d.ts",
			"require": "./dist/logger.cjs",
			"import": "./dist/logger.js"
		},
		"./stats": {
			"types": "./dist/stats.d.ts",
			"require": "./dist/stats.cjs",
			"import": "./dist/stats.js"
		}
	},
	"scripts": {
		"build": "rimraf dist && tsup index.ts logger.ts storage.ts database.ts --format cjs,esm --dts",
		"dev": "rimraf dist && tsup index.ts logger.ts storage.ts database.ts --format cjs,esm --dts --watch",
		"typecheck": "tsc --noEmit",
		"clean": "rimraf ./dist"
	},
	"dependencies": {
		"@voltage/config": "workspace:*",
		"@aws-sdk/client-s3": "^3.901.0",
		"@aws-sdk/s3-request-presigner": "^3.901.0",
		"basic-ftp": "^5.0.5",
		"better-sqlite3": "^11.7.0",
		"knex": "^3.1.0",
		"moment-timezone": "^0.6.0",
		"mssql": "^11.0.1",
		"mysql2": "^3.11.0",
		"pg": "^8.13.1",
		"pino": "^9.3.2",
		"pino-pretty": "^11.2.2",
		"ssh2-sftp-client": "^12.0.1",
		"uuid": "^9.0.1"
	},
	"devDependencies": {
		"@types/better-sqlite3": "^7.6.13",
		"@types/mssql": "^9.1.5",
		"@types/node": "^22.5.4",
		"@types/pg": "^8.11.10",
		"@types/ssh2-sftp-client": "^9.0.5",
		"@types/uuid": "^9.0.7",
		"tsup": "^8.0.1",
		"typescript": "^5.3.3"
	}
}
