{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"declaration": true,
		"declarationMap": true,
		"outDir": "./dist",
		"rootDir": "./",
		"paths": {
			"@/*": ["./*"],
			"@voltage/config": ["../../packages/config"],
			"@voltage/utils": ["../../packages/utils"],
			"@voltage/runtime": ["../runtime"],
			"@voltage/runtime/*": ["../runtime/*"]
		}
	},
	"include": ["./**/*.ts"],
	"exclude": ["node_modules", "dist"],
	"references": [{ "path": "../runtime" }]
}
